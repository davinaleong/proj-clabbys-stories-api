datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Couple {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  passphrase String
  galleries  Gallery[]
  createdAt  DateTime  @default(now())
}

model Gallery {
  id         String    @id @default(uuid())
  title      String
  coupleId   String
  couple     Couple    @relation(fields: [coupleId], references: [id])
  photos     Photo[]
  createdAt  DateTime  @default(now())
}

model Photo {
  id          String   @id @default(uuid())
  title       String?
  description String?
  imageUrl    String
  thumbUrl    String?
  takenAt     DateTime?
  galleryId   String
  gallery     Gallery  @relation(fields: [galleryId], references: [id])
  createdAt   DateTime @default(now())
}
